
@{
    Layout = "~/Areas/Administrador/Views/Shared/_LayoutAdmin.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/promociones.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/RegistrarPromocion.js" asp-append-version="true"></script>
}


<section>
    <div class="contenedorProm">
        <h1>CREAR PROMOCIONES</h1>
        <form asp-controller="Promocion" asp-action="CrearPromocion" method="post">
            <div class="contenedorCard">
                <div class="card">

                    <label>Nombre de la promocion</label>
                    <input name="nombre" placeholder="ex. Referido , Promocion educativa , Aliado digital" />
                    <label>Efecto</label>
                    <select name="efectoPromocion">
                        <option>Ninguno</option>
                        <option>Eliminar ultimo recibo</option>
                        <option>Eliminar recibo de instalacion</option>
                    </select>

                </div>
                <div class="card">
                    <div class="formPlatillo_inputHandler">
                        <label>Imagen del Platillo</label>
                        <div class="dropzoneContainer">
                            <input id="fileInput" name="imgSubida" type="file" required />
                            <img id="fileImg" />
                            <div id="fileMessageContainer" class="dropzoneContainer_message">
                                <h1>Arrastra una imagen para añadirla </h1>
                                <h2>&#8595</h2>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="botonB">
                <button>Crear Promocion</button>
            </div>
        </form>
    </div>
</section>
